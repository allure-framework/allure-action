{
  "name": "allure-action",
  "version": "0.0.0",
  "description": "Official Allure Report Github Action",
  "keywords": [],
  "license": "ISC",
  "author": "",
  "main": "./dist/index.js",
  "scripts": {
    "build": "tsup src/index.ts --format cjs --dts --out-dir dist --clean",
    "clean": "rm -rf dist",
    "format": "prettier --write './{src,test}/**/*.{json,js,ts,tsx}' package.json",
    "lint-staged": "lint-staged",
    "prepare": "husky",
    "test": "yarn allure run -- vitest run"
  },
  "lint-staged": {
    "{src,test}/**/*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "package.json": [
      "prettier --write"
    ]
  },
  "resolutions": {
    "vite": "^7.2.1"
  },
  "overrides": {
    "axios": "^1.13.1"
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.1",
    "@actions/glob": "^0.4.0",
    "@actions/io": "^1.1.3",
    "@allurereport/core": "^3.0.0-beta.22",
    "fast-glob": "^3.3.3"
  },
  "devDependencies": {
    "@allurereport/plugin-api": "^3.0.0-beta.22",
    "@stylistic/eslint-plugin": "^4.4.1",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/eslint": "^9.6.1",
    "@types/node": "^24.0.0",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "@vitest/runner": "^3.2.4",
    "@vitest/snapshot": "^3.2.4",
    "allure": "^3.0.0-beta.22",
    "allure-vitest": "^3.4.2",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsdoc": "^50.8.0",
    "eslint-plugin-n": "^17.19.0",
    "eslint-plugin-no-null": "^1.0.2",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "prettier": "^3.5.3",
    "prettier-plugin-packagejson": "^2.5.15",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}
